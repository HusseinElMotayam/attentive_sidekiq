<h3><%= t('disappeared_jobs') %></h3>

<div class="table_container">
  <table class="table table-hover table-bordered table-striped table-white">
    <thead>
      <tr>
        <th><%= t('jid') %></th>
        <th><%= t('queue') %></th>
        <th><%= t('class') %></th>
        <th><%= t('arguments') %></th>
        <th><%= t('created_at') %></th>
        <th><%= t('noticed_at') %></th>
        <th><%= t('status') %></th>
        <th><%= t('actions') %></th>
      </tr>
    </thead>

    <tbody>
      <% @suspicious_jobs.each do |job| %>
        <tr>
          <td><%= job['jid'] %></td>
          <td><%= job['queue'] %></td>
          <td><%= job['class'] %></td>
          <td><%= job['args'] %></td>
          <td><%= Time.at(job['created_at']).strftime("%H:%M:%S %d.%m.%Y %z") %></td>
          <td><%= job['noticed_at'] ? Time.at(job['noticed_at']).strftime("%H:%M:%S %d.%m.%Y %z") : t("noticed_unknown") %></td>
          <th><%= job['status'] ? t(job['status']) : t('detected') %></th>
          <td>
            <form action="<%= "#{root_path}disappeared-jobs/#{job['jid']}/delete" %>" method="post">
              <%= csrf_tag %>
              <input class="btn btn-danger btn-xs" type="submit" name="delete" value="<%= t('delete') %>" data-confirm="<%= t('delete_confirmation') %>" />
            </form>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
